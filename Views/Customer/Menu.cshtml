@using Microsoft.AspNetCore.Http
@model IEnumerable<TruyumClientApp.Models.MenuItem>

@{
    ViewData["Title"] = "Menu";
}

<h1>Menu</h1>
@Html.ActionLink("Cart","ViewCart","Customer",null,new {@class="btn btn-primary"})

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FreeDelivery)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FreeDelivery)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.ActionLink("Add to Cart", "AddToCart", new {id=item.MenuItemID})
            </td>
        </tr>
}
    </tbody>
</table>
